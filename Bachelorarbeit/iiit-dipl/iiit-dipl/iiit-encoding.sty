\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{iiit-encoding}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Paketoptionen
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newif\ifIIIT@ansinew \IIIT@ansinewtrue %default ansinew
\newif\ifIIIT@utfviii \IIIT@utfviiifalse
\newif\ifIIIT@latini \IIIT@latinifalse

\DeclareOption{ansinew}{\IIIT@ansinewtrue\IIIT@utfviiifalse\IIIT@latinifalse}   % ansinew als Zeichenkodierung
\DeclareOption{utf8}{\IIIT@utfviiitrue\IIIT@ansinewfalse\IIIT@latinifalse}      % utfviii als Zeichenkodierung
\DeclareOption{latin1}{\IIIT@latinitrue\IIIT@ansinewfalse\IIIT@utfviiifalse}    % latin1 als Zeichenkodierung
\ProcessOptions\relax

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% ben\"otigte Pakete
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\RequirePackage[TS1,T1]{fontenc}        % Europ\"aischer Zeichensatz
\ifIIIT@ansinew
	\RequirePackage[ansinew]{inputenc}  % Direkte Eingabe von Umlauten mit ANSI
\fi
\ifIIIT@utfviii
	\RequirePackage[utf8]{inputenc}     % Direkte Eingabe von Umlauten mit UTF8
\fi
\ifIIIT@latini
	\RequirePackage[latin1]{inputenc}   % Direkte Eingabe von Umlauten mit latin1
\fi
