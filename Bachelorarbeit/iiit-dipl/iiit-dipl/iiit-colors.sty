\definecolor{spotcolor}{rgb}{0,0,0}
\newcommand{\spotcolor}{\color{spotcolor}}
\ifIIIT@swmode
    \newcommand{\setspotcolor}[1]{}
\else
    \@ifundefined{KOMAClassName}{
        \ifIIIT@beamer
        \else
            \RequirePackage{titlesec}
            \newcommand*\@secondofsix[6]{#2}
            \newcommand{\addtotitleformat}{%
                \@ifstar{\addtotitleformat@star}{\addtotitleformat@nostar}}
            \newcommand\addtotitleformat@nostar[2]{%
                \PackageError{titlesec}{non starred form of \string\addtotitleformat\space not supported}{}}
            \newcommand\addtotitleformat@star[2]{%
                \expandafter\expandafter\expandafter\expandafter
                \expandafter\expandafter\expandafter\def
                \expandafter\expandafter\expandafter\expandafter
                \expandafter\expandafter\expandafter\@currentsection@font
                \expandafter\expandafter\expandafter\expandafter
                \expandafter\expandafter\expandafter{%
                    \expandafter\expandafter\expandafter\@secondofsix
                       \csname ttlf@\expandafter\@gobble\string#1\endcsname}%
                \titleformat*{#1}{\@currentsection@font#2}%
            }
            \newcommand{\setspotcolor}[1]{
                \colorlet{spotcolor}{#1}
                %\addtotitleformat*{\part}{\spotcolor}      % geht nicht mit titlesec
                %\addtotitleformat*{\chapter}{\spotcolor}   % geht nicht mit titlesec
                \ifdefined\section \addtotitleformat*{\section}{\spotcolor} \fi
                \ifdefined\subsection \addtotitleformat*{\subsection}{\spotcolor} \fi
                \ifdefined\subsubsection \addtotitleformat*{\subsubsection}{\spotcolor} \fi
                \ifdefined\paragraph \addtotitleformat*{\paragraph}{\spotcolor} \fi
                \ifdefined\subparagraph \addtotitleformat*{\subparagraph}{\spotcolor} \fi
                
                \setlist{font=\color{spotcolor}}
            }
        \fi
    }{
        \newcommand{\setspotcolor}[1]{
            \colorlet{spotcolor}{#1}
            \addtokomafont{disposition}{\spotcolor}
            \addtokomafont{descriptionlabel}{\spotcolor}
            % \addtokomafont{caption}{\spotcolor}
            
            \setlist{font=\color{spotcolor}}
        }
    }
\fi

