\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{iiit-units}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% ben\"otigte Pakete
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\RequirePackage{siunitx}            % Einheiten
\sisetup{
    binary-units=true,
    load-configurations=abbreviations,
    exponent-product = \cdot, 
    output-product = \times,
    detect-family=true,
    detect-display-math=false,
    detect-all=true
}
\addto\extrasngerman{\sisetup{locale = DE}}
\addto\extrasenglish{\sisetup{locale = UK}}

